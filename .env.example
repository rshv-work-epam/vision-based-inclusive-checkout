# Global
ENVIRONMENT=local
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_TRACES_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_METRICS_PROTOCOL=grpc
OTEL_RESOURCE_ATTRIBUTES=service.namespace=vbic,deployment.environment=local

# Catalog Service
CATALOG_HOST=0.0.0.0
CATALOG_PORT=8081
CATALOG_LOG_LEVEL=info
CATALOG_DB_URL=sqlite:///./catalog.db

# Inference Service
INFERENCE_HOST=0.0.0.0
INFERENCE_PORT=8082
INFERENCE_LOG_LEVEL=info
MODEL_PATH=/models/sample.onnx

# Optional: OpenAI fallback classification (used only when reference-matching returns no confident result)
# OPENAI_API_KEY=...
# VBIC_OPENAI_ENABLED=false
# VBIC_OPENAI_MODEL=gpt-4.1-mini
# VBIC_MIN_CONFIDENCE=0.12
# VBIC_MIN_TOP_ORB_CONFIDENCE=0.025
# VBIC_MIN_SCORE_MARGIN=0.03

# Review Tasks Service
REVIEW_TASKS_HOST=0.0.0.0
REVIEW_TASKS_PORT=8083
REVIEW_TASKS_LOG_LEVEL=info
REVIEW_TASKS_DB_URL=sqlite:///./review_tasks.db

# Operator Assistant Service
OP_ASSISTANT_HOST=0.0.0.0
OP_ASSISTANT_PORT=8084
OP_ASSISTANT_LOG_LEVEL=info
